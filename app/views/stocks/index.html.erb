<script>
  $(document).ready( function () {
      $('#table_id').DataTable();
  });
</script>

<table id="table_id" class="display">
    <thead>
        <tr>
          <th scope="col">Stock #</th>
          <th scope="col">Stock Image</th>
          <th scope="col">Model</th>
          <th scope="col">Color</th>
          <th scope="col">Year</th>
          <th scope="col">Price</th>
          <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
    <% @stocks.each do |stock| %>
    <tr>
      <td style="width: 100px; text-align:center"><%= link_to(stock.id, stock_path(stock)) %></td>
      <td style="width: 150px;"><%= image_for(stock) %></td>
      <td style="width: 200px;"><%= stock.model %></td>
      <td><%= stock.color %></td>
      <td><%= stock.year %></td>
      <td><%= stock.saleprice %></td>
      <td><%= stock.inventorystatus %></td>
      </tr>
    <% end %>
    </tbody>
</table>
