$(document).ready( function () {
    $('#table_id').DataTable();
} );


<form>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Make</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.make %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Model</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.model %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Year</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.year %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Color</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.color %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Dealer Price</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.dealerprice %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Sales Price</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.saleprice %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Profit</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.profit %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Inventory Status</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.inventorystatus %>>
  </div>
  <div class="form-group">
    <div class="col-3">
    <label for="formGroupExampleInput">Picture URL</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder=<%= @stock.url %>>
  </div><br>

<nav>
  <button type="button" class="btn btn-outline-info"><%= link_to "All Inventory", stocks_path %></button>
  <button type="button" class="btn btn-outline-info"><%= link_to("New", new_stock_path) %></button>
  <button type="button" class="btn btn-outline-info"><%= link_to "Edit", edit_stock_path(@stock) %></button>
  <button type="button" class="btn btn-outline-info"><%= link_to "Delete", stock_path(@stock), method: :delete, data: { confirm: 'Are you sure?' } %></button>
</nav>
