      <ul>
        <% @buyers.each do |user| %>
          <li>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
    <div id="container">
      <section id="sidebar">
        <%= render "layouts/editsidebar" %>
