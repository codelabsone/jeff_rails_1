<article>
  <header>
    <h1> <%= "#{@stock.make} #{@stock.model}"  %> </h1>
  </header>

    <div id="container">
      <section id="sidebar">
        <%= render "layouts/editsidebar" %>
      </section>
    </div>

  <h5><%= pluralize(@buyers.size, 'User Favorite') %></h5><br/>

  space for car photos here

  <br/>

  <% if current_user_admin? %>
    <% if @buyers.any? %>
    <hr/>
