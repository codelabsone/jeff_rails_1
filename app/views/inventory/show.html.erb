<article>
  <header>
    <h1><%= @inventory.make %> <%= @inventory.model %></h1>
  </header>
  <h3>Year</h3>
  <p>
    <%= @inventory.year %>
  </p>
  <h3>Color</h3>
  <p>
    <%= @inventory.color %>
  </p>
  <h3>Dealer Price</h3>
  <p>
    <%= @inventory.dealerprice %>
  </p>
  <h3>Sale Price</h3>
  <p>
    <%= @inventory.saleprice %>
  </p>
  <h3>Profit</h3>
  <p>
    <%= @inventory.profit %>
  </p>
  <h3>Inventory Status</h3>
  <p>
    <%= @inventory.inventorystatus %>
  </p>
</article>

<nav>
  <%= link_to "All Inventory", root_path %> |
  <%= link_to "Edit", edit_inventory_path(@inventory) %> |
  <%= link_to("Add New", new_inventory_path) %>
</nav>
