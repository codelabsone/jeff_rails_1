<%= form_for(@inventory) do |f| %>
<p>
  <%= f.label :make %><br/>
  <%= f.text_field :make, autofocus: true %>
</p>
<p>
  <%= f.label :model %><br/>
  <%= f.text_field :model %>
</p>
<p>
  <%= f.label :color %><br/>
  <%= f.text_field :color %>
</p>
<p>
  <%= f.submit %>
  <%= link_to "Cancel", automotive_path %>
</p>
<% end %>
